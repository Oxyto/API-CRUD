{
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dest"],
  "compilerOptions": {
    "incremental": true,
    "sourceMap": true,
    "target": "es2019",
    "moduleDetection": "auto",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dest",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true
  }
}
